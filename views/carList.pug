doctype html
html
  head
    title Car Models

  link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")

  body
    h1 Car Models
    table.table.table-bordered
      thead.table-light
        tr
          th Name
          th Code
          th Make
          th Measures
          th Actions
      tbody
        each car in cars
          tr
            td= car.name
            td= car.code
            td= car.make
            td= car.measures
            td
              a(href=`/edit/${car.id}`) Edit
              a(href=`/delete/${car.id}`) Delete
    h2 Add Car
    form(action="/cars", method="POST")
      label(for="name") Name
      input#name.form-control(type="text", name="name", required)
      label(for="code") Code
      input#code.form-control(type="text", name="code", required)
      label(for="make") Make
      input#make.form-control(type="text", name="make")
      label(for="measures") Measures
      input#measures.form-control(type="text", name="measures", placeholder="Enter JSON data")
      button.btn.btn-primary(type="submit") Add
